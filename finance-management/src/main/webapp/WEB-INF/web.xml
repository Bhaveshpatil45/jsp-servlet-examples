<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!-- Servlet Configuration -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.finance.controllers.AuthController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>com.finance.controllers.AuthController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <!-- Transaction Servlet -->
    <servlet>
        <servlet-name>TransactionServlet</servlet-name>
        <servlet-class>com.finance.controllers.TransactionController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>TransactionServlet</servlet-name>
        <url-pattern>/transaction</url-pattern>
    </servlet-mapping>

    <!-- Budget Servlet -->
    <servlet>
        <servlet-name>BudgetServlet</servlet-name>
        <servlet-class>com.finance.controllers.BudgetController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>BudgetServlet</servlet-name>
        <url-pattern>/budget</url-pattern>
    </servlet-mapping>

    <!-- Report Servlet -->
    <servlet>
        <servlet-name>ReportServlet</servlet-name>
        <servlet-class>com.finance.controllers.ReportController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ReportServlet</servlet-name>
        <url-pattern>/report</url-pattern>
    </servlet-mapping>

    <!-- Notification Servlet -->
    <servlet>
        <servlet-name>NotificationServlet</servlet-name>
        <servlet-class>com.finance.controllers.NotificationController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>NotificationServlet</servlet-name>
        <url-pattern>/notifications</url-pattern>
    </servlet-mapping>

    <!-- Welcome File List (Optional) -->
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>

</web-app>
